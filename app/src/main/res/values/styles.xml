    <style name="AppTheme_2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionOverflowButtonStyle">@style/popup</item>
        <item name="android:colorButtonNormal" tools:ignore="NewApi">@color/colorPrimary</item>

    </style>



    <style name="AccentButtonRound" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="background">@drawable/rounded_button</item>

    </style>


    <style name="WhiteButtonRound" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/white</item>
